[
    {
        "name": "Notepad Verification Scenario",
        "description": "Opens Notepad, types text, and verifies.",
        "steps": [
            {
                "name": "Start Notepad",
                "type": "system",
                "params": {
                    "action": "start_app",
                    "path": "notepad.exe",
                    "backend": "uia"
                }
            },
            {
                "name": "Input Text",
                "type": "ui",
                "params": {
                    "operation": "input",
                    "target": "notepad_page.NotepadPage.editor",
                    "value": "Hello World from E2E Framework"
                }
            },
            {
                "name": "Read Editor Text",
                "type": "ui",
                "params": {
                    "operation": "read",
                    "target": "notepad_page.NotepadPage.editor",
                    "save_as": "actual_text"
                }
            },
            {
                "name": "Verify Text Content",
                "type": "verify",
                "params": {
                    "type": "contains",
                    "text": "${actual_text}",
                    "contains": "Hello World from E2E Framework"
                }
            },
            {
                "name": "Select All and Delete",
                "type": "ui",
                "params": {
                    "operation": "input",
                    "target": "notepad_page.NotepadPage.editor",
                    "value": "^a{DELETE}"
                }
            },
            {
                "name": "Click File Menu",
                "type": "ui",
                "params": {
                    "operation": "click",
                    "target": "notepad_page.NotepadPage.file_menu"
                }
            },
            {
                "name": "Click Exit Menu Item",
                "type": "ui",
                "params": {
                    "operation": "click",
                    "target": "notepad_page.NotepadPage.exit_menu_item"
                }
            }
        ]
    }
]