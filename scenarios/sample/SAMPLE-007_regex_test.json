{
    "id": "SAMPLE-007",
    "name": "正規表現抽出テスト",
    "description": "UIアクションにおける正規表現抽出機能の動作を検証します。",
    "tags": [
        "sample",
        "regex"
    ],
    "steps": [
        {
            "step_id": 1,
            "name": "メモ帳起動",
            "type": "system",
            "params": {
                "action": "start_app",
                "path": "notepad.exe"
            }
        },
        {
            "step_id": 2,
            "name": "初期待機",
            "type": "system",
            "params": {
                "action": "sleep",
                "duration": 2
            }
        },
        {
            "step_id": 3,
            "name": "テキスト入力",
            "type": "ui",
            "params": {
                "target": "notepad_page.NotepadPage.editor",
                "operation": "input",
                "value": "Order ID: 12345 Confirmed"
            }
        },
        {
            "step_id": 4,
            "name": "正規表現でIDをキャプチャ",
            "type": "ui",
            "params": {
                "target": "notepad_page.NotepadPage.editor",
                "operation": "read",
                "save_as": "order_id",
                "regex": "Order ID: (\\d+)"
            }
        },
        {
            "step_id": 5,
            "name": "完全一致をキャプチャ",
            "type": "ui",
            "params": {
                "target": "notepad_page.NotepadPage.editor",
                "operation": "read",
                "save_as": "full_msg",
                "regex": "Order.*Confirmed"
            }
        },
        {
            "step_id": 6,
            "name": "ID検証",
            "type": "verify",
            "params": {
                "type": "equals",
                "actual": "${order_id}",
                "expected": "12345"
            }
        },
        {
            "step_id": 7,
            "name": "全文検証",
            "type": "verify",
            "params": {
                "type": "equals",
                "actual": "${full_msg}",
                "expected": "Order ID: 12345 Confirmed"
            }
        }
    ]
}